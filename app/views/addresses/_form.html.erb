<%= form_for @address, :html => { :class => "form-horizontal address" } do |f| %>

  <% if @address.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :house_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :house_number, :class => 'form-control' %>
      <%=f.error_span(:house_number) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :floor_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :floor_no, :class => 'form-control' %>
      <%=f.error_span(:floor_no) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :building_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :building_name, :class => 'form-control' %>
      <%=f.error_span(:building_name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :street_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :street_no, :class => 'form-control' %>
      <%=f.error_span(:street_no) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :landmark, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :landmark, :class => 'form-control' %>
      <%=f.error_span(:landmark) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :area, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
