    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
      <%=f.error_span(:state) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
      <%=f.error_span(:city) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pin_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pin_code, :class => 'form-control' %>
      <%=f.error_span(:pin_code) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :permanent, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :permanent, :class => 'form-control' %>
      <%=f.error_span(:permanent) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
