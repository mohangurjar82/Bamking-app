<%= simple_form_for(@transaction) do |f| %>
	<%= f.error_notification %>
	<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
	<div class="form-inputs">
	  <%=label_tag :account_number %>
	  <%=text_field_tag :account_no, current_user.account.account_no, disabled: true, class: "form-control" %> 
	</div>

	<div class="form-inputs">
	  <%=label_tag :account_balance %>
	  <%=text_field_tag :account_balance, current_user.account.balance, disabled: true, class: "form-control" %> 
	</div>

	<div class="form-inputs">
	  <%= f.input :amount, as: :float %>
	</div>

	<div class="form-inputs">
	  <%= f.input :transaction_type, priority: ["CR"], collection: ["CR", "DR"], include_blank: false %>
	</div>

	<div class="form-actions">
	  <%= f.submit :Save, class: "btn btn-primary", id: "submit-btn" %>
	</div>
<% end %>
